#!/bin/bash
if [[ $# -eq 0 ]]; then
    echo "Usage: ppcsv <csv-file>"
    exit 1
fi

if [[ -f /etc/os-release ]]; then
    source /etc/os-release
fi
if [[ $ID_LIKE == "debian" ]]; then
    column -t -s, -n "$@" | less -F -S -X -K
else
    perl -pe 's/((?<=,)|(?<=^)),/ ,/g;' "$@" | column -t -s, | less  -F -S -X -K
fi
